<% if author_signed_in? %>

  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Title</th>
        <th>Publication Year</th>
        <th>Location</th>
        <th> </th>
      </tr>
    </thead>

    <tbody>
          <% @books.each do |book| %>
       
          <% if book.author == current_author %>
            <tr>
              <td>
                <%= link_to book.title, book %>
              </td>
              <td><%= book.publication_year %></td>
              <td><%= book.location %></td>
              <td><%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
            
            </tr>
          <% end %>
        <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Book', new_book_path, class:"btn btn-secondary" %>
<% else %>

<h1>Welcome perspective authors!</h1>
Please sign up or log in to add a new book entry.

<% end %>